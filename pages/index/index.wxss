/**index.wxss**/
.hotmovie {
  width:100%;
}
/* 标题部分  */
.title {
  background:#eee;
  height:2rem;
  line-height: 2rem;
}
.wrap-list {
    height:100vh;
}
text {
    text-align: left;
    padding-left:0.625rem;
}
/* 电影列表 */
.item {
  width:100%;
  height:5rem;
  display: flex;
  padding:0.625rem 0;
  flex-direction: row;
  border-bottom:0.0625rem solid #eee;
}
.preview {
  float:left;
  height:100%;
  flex:1;
  margin-left:0.625rem;
  overflow: hidden;
}
.preview image {
  width:100%;
  height:100%;
}

.info {
  flex:4;
  margin:0.3125rem 0.625rem;
  display: flex;
  flex-direction: column;
}
.info .actors {
  overflow: hidden;
}
.movie-title {font-weight: 500;color:black;padding-left:0.625rem;}
.rating {float:right;color:rgb(243, 77, 77);}


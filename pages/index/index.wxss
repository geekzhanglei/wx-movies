/**index.wxss**/
.hotmovie {
  width:100%;
}
/* 标题部分  */
.title {
  background:#eee;
  height:2rem;
  line-height: 2rem;}
text {text-align: left;padding-left:10px}
/* 电影列表 */
.item {
  width:100%;
  height:80px;
  display: flex;
  padding:10px 0;
  flex-direction: row;
  border-bottom:1px solid #eee;
}
.preview {
  float:left;
  height:100%;
  flex:1;
  margin-left:10px;
  overflow: hidden;
}
.preview image {
  width:100%;
  height:100%;
}

.info {
  flex:4;
  margin:5px 10px;
  display: flex;
  flex-direction: column;
}
.info .actors {
  /* text-emphasis: emphasis; */
  overflow: hidden;
  /* white-space:nowrap; */
}
.movie-title {font-weight: 500;color:black;padding-left:10px;}
.rating {float:right;color:rgb(243, 77, 77);}


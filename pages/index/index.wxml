<!--index.wxml-->
<view class="container">
  <view class="hotmovie">
    <view class="title">
      <text>{{title}}</text>
    </view>
    <scroll-view class="movie-list" scroll-x="false" scroll-y="true" upper-threshold="50" lower-threshold="50">
      <view class="item" bindtap="goToDetails" id="{{item.id}}" wx:for="{{movieArr}}" wx:key="unique">
        <view class="preview">
          <image src="{{item.src}}" alt="img is gone" />
        </view>
        <view class="info">
          <view class="movie-title">{{item.title}}
            <text class="rating">{{item.rating}}</text>
          </view>
          <text class="start-time">类型：{{item.type}}</text>
          <text class="director">导演：{{item.director}}</text>
          <text class="actors">主演：{{item.actors}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

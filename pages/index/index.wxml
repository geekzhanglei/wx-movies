<!--index.wxml-->
<view class="container">
    <view class="hotmovie" wx:if="{{isShowOk}}">
        <view class="title">
            <text>{{title}}</text>
        </view>
        <scroll-view class="wrap-list" scroll-y="true" upper-threshold="50" lower-threshold="50">
            <component-list list-source="{{movieArrSource}}"></component-list>
        </scroll-view>
    </view>
    <component-error wx:else></component-error>
</view>

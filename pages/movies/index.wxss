/* pages/movies/index.wxss */
/* 搜索 */
input {
   text-align:center;
  margin:3rem auto;
  height: 2rem;
  border:1px solid #ddd;
  width:250px;
  width:80vw;
  background:#edeaea;
  border-radius:5px;
}
.find {
  box-sizing: border-box;
  border-top:4px solid #eee;
}
.title,.search title {
    height:2rem;
    line-height:2rem;
    border-bottom:1px solid #eee;
}
/* 专题 */
.item {
    background: lightblue;
    height:5rem;
    margin:0.5rem;
    border-radius:10rpx;
    position: relative;
}
.content {
    display: flex;
    flex-direction: column;
    margin:10px;
}
.content .row {
    flex:1;
    display: flex;
    flex-direction: row;
}
.row .item:first-child {
    flex:2;
}
.row .item:last-child {
    flex:1;
}
.cover {
    width:100%;
    background:#666;
    opacity: .3;
    position: absolute;
    bottom:0;
    padding-left:5px;
    box-sizing:border-box;
}
.cover text {
    color:#fff;
    font-size: 0.8rem;
    height: 1.1rem;
    line-height: 1.1rem;
    font-weight: 200;
}
.content image {
    width:100%;
    height: 0;
}

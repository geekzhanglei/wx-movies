.meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 40rpx;
    width:100%;
  }

  .poster {
    height: 800rpx;
    padding:20rpx;
  }

  .title {
    font-style: 2rem;
    color: #444;
    text-align: center;
    padding-top: 20rpx;
  }

  .info {
    color: #888;
    margin-top: 20rpx;
    width: 80%;
  }

  .summary {
    width: 80%;
    margin: 30rpx auto;
  }

  .label {
    display: block;
    margin-bottom: 30rpx;
  }

  .content {
    color: #666;
    font-size: 13px;
    padding: 2em;
  }

  .background {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    opacity: .1;
  }
.item {
    display:flex;
    flex-direction: row;
    width:80%;
}
.resource {
  display: flex;
  justify-content: center;
  z-index:999;
}
.resource .cont {
    color:blue;
}

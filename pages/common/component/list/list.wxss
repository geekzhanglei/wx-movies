/* pages/common/list/list.wxss */
/* 电影列表 */
text {
  padding-left:0.625rem;
}
.item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding:0.625rem 0;
    border-bottom:0.0625rem solid #eee;
    overflow: hidden;
    background:rgb(245, 248, 250);
    font-size:0.8rem;
  }
  .preview {
    flex:2;
    margin-left:0.625rem;
  }
  .preview image {
    width:100%;
    height:180rpx;
    min-height: 180rpx;
  }

  .info {
    flex:7;
    margin:0.3125rem 0.625rem;
    display: flex;
    flex-direction: column;
    width:200rpx;
  }
  .info text {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
     }
  .movie-title {
    font-weight: 500;
    color:black;
    padding-left:0.625rem;
  }
  .rating {
    float:right;
    color:rgb(243, 77, 77);
    }
  .box,.type,.director,.actors {
    color:#888;
  }

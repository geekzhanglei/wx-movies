/* 电影列表 */
text {
  padding-left:10px;
}
.item {
    display: flex;
    padding:10px 0;
    flex-direction: row;
    border-bottom:1px solid #eee;
    overflow: hidden;
    background:rgb(245, 248, 250); 
    font-size:0.8rem;
  }
  .preview {
    flex:2;
    margin-left:10px;
  }
  .preview image {
    width:100%;
    height:100%;
  }

  .info {
    flex:7;
    margin:5px 10px;
    display: flex;
    flex-direction: column;
  }
  .info text {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
     }
  .movie-title {
    font-weight: 500;
    color:black;
    padding-left:10px;
  }
  .rating {
    float:right;
    color:rgb(243, 77, 77);
    }
  .box,.type,.director,.actors {
    color:#888;
  }
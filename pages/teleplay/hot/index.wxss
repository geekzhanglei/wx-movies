.title {
    font-size:0.8rem;
    color:#888888;
    background-color:rgb(245, 248, 250);
    position:fixed;
    top:0;
    width:100%;
    line-height: 1.5rem;
    padding-left:0.5rem;
    z-index:999;
}
.item {
    flex:1;
    height:200px;
    width:100px;
    padding:0 0.5rem;
    display: flex;
    flex-direction: column;
}
.wrap { 
    margin-top:1.5rem;
    padding:0.5rem 0;
}
.row {
    display: flex;
    flex-direction: row;
}

.wrap-img {
    position: relative;
    overflow: hidden;
}
.img-rank {
    position: absolute;
    right: -1rem;
    top: -0.3rem;
    width: 3rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1rem;
    padding: 8px 0 3px 0;
    background-color: rgba(0, 0, 0, 0.6);
    text-align: center;
     transform: rotate(45deg);
    font-size: 0.75rem;
}
.img-type {
    position: absolute;
    bottom: 0.2rem;
    width: 100%;
    height: 1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1rem;
    padding: 8px 0 3px 0;
    background-color: rgba(0, 0, 0, 0.6);
    text-align: center;
    font-size: 0.75rem;
}
.img-cont {
    width:100%;
}
.des {
  text-align: center;
  font-size: 0.7rem;
}
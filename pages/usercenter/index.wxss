/* pages/usercenter/index.wxss */

.my {
  min-height:100vh;
}
.userinfo {
    height:9rem;
    background-color: #00B2EE;
    display: flex;
    justify-content:center;
    align-items: center;
    flex-direction: column;
}

.userinfo-avatar {
  width: 3.5rem;
  height: 3.5rem;
  margin: 0.625rem;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(245, 243, 243);
  font-size: 1rem;
}

.usermotto {
  margin-top: 12.5rem;
}
.item-wrap {
    margin:40rpx 30rpx;
    display:flex;
}
.item-wrap image {
    width: 1rem;
    height: 1rem;
}
.item {
    width:100%;
    height:110rpx;
    background:#fafafa;
    display: flex;
    align-items: space-between;
    /* hack */
    position: initial;
}
.item .flex-left,.item .flex-right {
  display: flex;
  align-items: center;
}
.flex-left .left {
    padding:0 0.625rem;
}
.flex-left text {
    font-size: 1rem;
    color:#666;
}

.flex-right  {
  flex:1;
  display: flex;
  justify-content: flex-end;
}
.flex-right image {
  margin-right:1rem;
}
/* 小程序button默认样式是伪元素after设置的 */
.item::after {
  display:none;
}
